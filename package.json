{
  "name": "dentit",
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "private": true,
  "scripts": {
    "dev:web": "next dev",
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "db:harden-phone": "prisma db execute --file ./scripts/harden-phone-unique.sql --schema ./prisma/schema.prisma",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "electron:dev": "concurrently -k \"npm:dev:web\" \"wait-on tcp:3000 && ELECTRON_START_URL=http://127.0.0.1:3000 electron .\"",
    "electron:build": "npm run build && electron-builder --linux AppImage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^5.22.0",
    "@types/qrcode": "^1.5.6",
    "axios": "^1.6.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jspdf": "^4.1.0",
    "lodash": "^4.17.23",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "prisma": "^5.22.0",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.23",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "build": {
    "appId": "com.elydent.desktop",
    "productName": "ELYDENT",
    "executableName": "ELYDENT",
    "asar": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "app/**",
      "lib/**",
      "prisma/**",
      "prisma-runtime/**",
      "public/**",
      "scripts/**",
      "electron/**",
      ".next/**",
      "next.config.js",
      "next-env.d.ts",
      "postcss.config.mjs",
      "tsconfig.json",
      "package.json",
      "node_modules/.prisma/**",
      "node_modules/**"
    ],
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
